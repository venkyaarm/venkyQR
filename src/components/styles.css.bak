body {
  margin: 0;
  font-family: 'Segoe UI', sans-serif;
  background: linear-gradient(to right, #c2e9fb, #a1c4fd);
  color: #222;
  transition: all 0.3s ease;
}

.container {
  max-width: 800px;
  margin: auto;
  padding: 2rem;
  text-align: center;
  background-color: #ffffffcc;
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}

.title {
  font-size: 2.5rem;
  color: #1d3557;
  margin-bottom: 20px;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-8px); }
}

.input {
  width: 90%;
  height: 80px;
  margin-bottom: 1rem;
  font-size: 1.2rem;
  padding: 10px;
  border: 2px solid #2196f3;
  border-radius: 12px;
}

.buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  justify-content: center;
  margin-bottom: 20px;
}

button, .upload-btn {
  background-color: #2196f3;
  color: white;
  border: none;
  padding: 10px 16px;
  font-size: 1rem;
  border-radius: 10px;
  cursor: pointer;
  transition: background 0.3s;
}

button:hover, .upload-btn:hover {
  background-color: #0d8bdb;
}

.upload-btn input {
  display: none;
}

.qr-box {
  margin: 20px auto;
  padding: 1rem;
  background: white;
  border-radius: 16px;
  display: inline-block;
}

.history-box {
  margin-top: 20px;
  background: #f1f1f1;
  border-radius: 12px;
  padding: 10px;
  text-align: left;
}

.suggestion-box {
  background-color: #dcedc8;
  color: #33691e;
  padding: 12px;
  border-radius: 10px;
  margin-bottom: 20px;
}
