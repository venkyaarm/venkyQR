body {
  margin: 0;
  font-family: Arial, sans-serif;
  background: #f3f3f3;
}

.container {
  text-align: center;
  padding: 20px;
}

textarea.input {
  width: 90%;
  height: 60px;
  margin-bottom: 10px;
  font-size: 16px;
}

.buttons {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 10px;
}

button, .upload-btn {
  padding: 10px;
  font-size: 14px;
  cursor: pointer;
  border-radius: 6px;
  border: none;
  background-color: #4caf50;
  color: white;
}

.qr-box {
  margin: 20px auto;
  background: white;
  display: inline-block;
  padding: 20px;
  border: 1px solid #ccc;
}

.history-box {
  margin-top: 20px;
  text-align: left;
  max-width: 500px;
  margin-inline: auto;
  background: #fff;
  padding: 10px;
  border-radius: 6px;
}

.dark {
  background-color: #111;
  color: #eee;
}

.dark textarea,
.dark .history-box {
  background-color: #222;
  color: #eee;
}
